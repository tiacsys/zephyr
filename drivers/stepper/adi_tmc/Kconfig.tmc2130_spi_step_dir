config STEPPER_ADI_TMC2130_SPI_STEP_DIR
	bool "Activate trinamic tmc2209 stepper driver"
	depends on DT_HAS_ADI_TMC2130_SPI_STEP_DIR_ENABLED
	select STEP_DIR_STEPPER
	default y
	help
